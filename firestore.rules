rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    // For creating documents
    function isCreatingOwnDoc() {
      return request.auth.uid == request.resource.data.userId;
    }

    // For accessing existing documents
    function isOwnerOfDoc() {
      return request.auth.uid == resource.data.userId;
    }

    // --- User Profile ---
    // A user can manage their own profile. Deletion is disallowed.
    match /users/{userId} {
      allow read, update, create: if request.auth.uid == userId;
      allow delete: if false;
    }

    // --- Main Data Collections ---
    // All these collections follow the same ownership pattern.
    match /productiveUnits/{id} {
      allow create: if isSignedIn() && isCreatingOwnDoc();
      allow list: if isSignedIn();
      allow get, update, delete: if isSignedIn() && isOwnerOfDoc();
    }
    match /lots/{id} {
      allow create: if isSignedIn() && isCreatingOwnDoc();
      allow list: if isSignedIn();
      allow get, update, delete: if isSignedIn() && isOwnerOfDoc();
    }
    match /staff/{id} {
      allow create: if isSignedIn() && isCreatingOwnDoc();
      allow list: if isSignedIn();
      allow get, update, delete: if isSignedIn() && isOwnerOfDoc();
    }
    match /staffAttendance/{id} {
      allow create: if isSignedIn() && isCreatingOwnDoc();
      allow list: if isSignedIn();
      allow get, update, delete: if isSignedIn() && isOwnerOfDoc();
    }
    match /tasks/{id} {
      allow create: if isSignedIn() && isCreatingOwnDoc();
      allow list: if isSignedIn();
      allow get, update, delete: if isSignedIn() && isOwnerOfDoc();
    }
    match /supplies/{id} {
      allow create: if isSignedIn() && isCreatingOwnDoc();
      allow list: if isSignedIn();
      allow get, update, delete: if isSignedIn() && isOwnerOfDoc();
    }
    match /transactions/{id} {
      allow create: if isSignedIn() && isCreatingOwnDoc();
      allow list: if isSignedIn();
      allow get, update, delete: if isSignedIn() && isOwnerOfDoc();
    }

    // --- Subcollections ---
    match /lots/{lotId}/sublots/{sublotId} {
      allow create: if isSignedIn() && isCreatingOwnDoc();
      allow list: if isSignedIn();
      allow get, update, delete: if isSignedIn() && isOwnerOfDoc();
    }

    match /tasks/{taskId}/supplyUsages/{usageId} {
      allow create: if isSignedIn() && isCreatingOwnDoc();
      allow list: if isSignedIn(); // Required for collectionGroup query
      allow get, update, delete: if isSignedIn() && isOwnerOfDoc();
    }

    // --- System Logs (Write-only for clients) ---
    match /system_logs/{logId} {
      allow create: if isSignedIn() && isCreatingOwnDoc();
      allow read, update, delete: if false;
    }
  }
}
