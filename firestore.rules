rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }

    // User profile is private
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // For user-owned data, allow list/read for any authenticated user.
    // The client code is responsible for querying data with a `where('userId', '==', user.uid)` clause.
    // Write permissions (create, update, delete) are still restricted to the owner.
    match /productiveUnits/{docId} { 
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }
    match /lots/{docId} { 
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }
    match /staff/{docId} { 
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }
    match /staffAttendance/{docId} { 
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }
    match /supplies/{docId} { 
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }
    match /tasks/{docId} { 
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }
    match /transactions/{docId} { 
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }
    match /system_logs/{logId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read: if isOwner(resource.data.userId);
      allow update, delete: if false;
    }

    // --- Subcollection Rules ---
    // Read access is open to signed-in users, relying on client queries.
    // Write access checks ownership of the parent document.
    match /lots/{lotId}/sublots/{sublotId} {
      allow read: if isSignedIn();
      allow write: if isOwner(get(/databases/$(database)/documents/lots/$(lotId)).data.userId);
    }

    match /tasks/{taskId}/supplyUsages/{usageId} {
      allow read: if isSignedIn();
      allow write: if isOwner(get(/databases/$(database)/documents/tasks/$(taskId)).data.userId);
    }
    
    // --- Collection Group Rules ---
    // This is critical for reports. It allows querying across all subcollections of a certain name,
    // but relies on the client to filter by userId.
    match /{path=**}/supplyUsages/{usageId} {
      allow list: if isSignedIn();
    }
  }
}
