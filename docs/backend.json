{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "subscription": {
          "type": "string",
          "description": "The user's subscription status.",
          "enum": [
            "free",
            "premium"
          ]
        }
      },
      "required": [
        "uid",
        "email",
        "subscription"
      ]
    },
    "Lot": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Lot",
      "type": "object",
      "description": "Represents a land lot with its attributes.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Lot entity."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this lot."
        },
        "name": {
          "type": "string",
          "description": "Name of the lot."
        },
        "areaHectares": {
          "type": "number",
          "description": "Area of the lot in hectares."
        },
        "location": {
          "type": "string",
          "description": "Location of the lot (Vereda/Sector)."
        },
        "technicalNotes": {
          "type": "string",
          "description": "Technical notes about the lot."
        },
        "sowingDate": {
          "type": "string",
          "format": "date",
          "description": "Fecha de siembra del lote."
        },
        "sowingDensity": {
          "type": "number",
          "description": "Densidad de siembra del lote (árboles por hectárea)."
        },
        "sowingDistance": {
          "type": "number",
          "description": "Distancia de siembra entre plantas en metros."
        },
        "totalTrees": {
          "type": "number",
          "description": "Número total de árboles en el lote."
        }
      },
      "required": [
        "id",
        "name",
        "areaHectares"
      ]
    },
    "Staff": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Staff",
      "type": "object",
      "description": "Represents a staff member.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Staff entity."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this staff data."
        },
        "name": {
          "type": "string",
          "description": "Name of the staff member."
        },
        "contact": {
          "type": "string",
          "description": "Contact information for the staff member."
        },
        "employmentType": {
          "type": "string",
          "description": "Type of employment (Permanent, Temporary, Contractor)."
        },
        "baseDailyRate": {
          "type": "number",
          "description": "Base daily rate for the staff member."
        }
      },
      "required": [
        "id",
        "name",
        "employmentType",
        "baseDailyRate"
      ]
    },
    "Task": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Task",
      "type": "object",
      "description": "Represents a task to be performed.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Task entity."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this task."
        },
        "lotId": {
          "type": "string",
          "description": "Reference to Lot. (Relationship: Lot 1:N Task)"
        },
        "category": {
          "type": "string",
          "description": "Category of the task (Preparation, Sowing, Maintenance, Harvest, Post-Harvest)."
        },
        "type": {
          "type": "string",
          "description": "Specific type of task."
        },
        "responsibleId": {
          "type": "string",
          "description": "Reference to Staff. (Relationship: Staff 1:N Task)"
        },
        "startDate": {
          "type": "string",
          "description": "Fecha de inicio de la labor.",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "description": "Fecha de finalización de la labor.",
          "format": "date"
        },
        "reentryDate": {
          "type": "string",
          "description": "Fecha de reingreso para la labor en el mismo lote.",
          "format": "date"
        },
        "status": {
          "type": "string",
          "description": "Estado de cumplimiento de la labor.",
          "enum": [
            "Por realizar",
            "En Proceso",
            "Pendiente",
            "Finalizado"
          ]
        },
        "plannedJournals": {
          "type": "number",
          "description": "Planned man-days (journals) for the task."
        },
        "progress": {
          "type": "number",
          "description": "Progress of the task (0-100%)."
        },
        "plannedCost": {
          "type": "number",
          "description": "Calculated planned cost for the task."
        },
        "actualCost": {
          "type": "number",
          "description": "Calculated actual cost based on progress."
        },
        "downtimeMinutes": {
          "type": "number",
          "description": "Tiempo de inactividad de la labor en minutos."
        },
        "observations": {
          "type": "string",
          "description": "Observaciones adicionales sobre la labor."
        }
      },
      "required": [
        "id",
        "lotId",
        "category",
        "responsibleId",
        "startDate",
        "status",
        "progress",
        "plannedJournals",
        "plannedCost",
        "actualCost"
      ]
    },
    "ProductiveUnit": {
      "title": "Unidad Productiva",
      "type": "object",
      "description": "Información general de la finca o unidad productiva del usuario.",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "farmName": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "department": {
          "type": "string"
        },
        "municipality": {
          "type": "string"
        },
        "vereda": {
          "type": "string"
        },
        "shareGps": {
          "type": "boolean"
        },
        "crop": {
          "type": "string"
        },
        "variety": {
          "type": "string"
        },
        "altitudeRange": {
          "type": "string"
        },
        "averageTemperature": {
          "type": "number"
        },
        "projectStartDate": {
          "type": "string"
        },
        "totalFarmArea": {
          "type": "number"
        },
        "cultivatedArea": {
          "type": "number"
        },
        "sowingDensity": {
          "type": "number"
        },
        "sowingDistance": {
          "type": "number",
          "description": "Distancia de siembra entre plantas en metros."
        },
        "totalTrees": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "userId"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Collection for storing user profile information. Each document is owned by a single user.",
          "params": [
            {
              "name": "userId",
              "description": "The user's unique ID."
            }
          ]
        }
      },
      {
        "path": "/lots/{lotId}",
        "definition": {
          "entityName": "Lot",
          "schema": {
            "$ref": "#/backend/entities/Lot"
          },
          "description": "Collection for storing Lot entities. Each document is owned by a single user, enforced by security rules on the 'userId' field.",
          "params": [
            {
              "name": "lotId",
              "description": "Unique identifier for the lot."
            }
          ]
        }
      },
      {
        "path": "/staff/{staffId}",
        "definition": {
          "entityName": "Staff",
          "schema": {
            "$ref": "#/backend/entities/Staff"
          },
          "description": "Collection for storing Staff entities. Each document is owned by a single user, enforced by security rules on the 'userId' field.",
          "params": [
            {
              "name": "staffId",
              "description": "Unique identifier for the staff member."
            }
          ]
        }
      },
      {
        "path": "/tasks/{taskId}",
        "definition": {
          "entityName": "Task",
          "schema": {
            "$ref": "#/backend/entities/Task"
          },
          "description": "Collection for storing Task entities. Each document is owned by a single user, enforced by security rules on the 'userId' field.",
          "params": [
            {
              "name": "taskId",
              "description": "Unique identifier for the task."
            }
          ]
        }
      },
      {
        "path": "/productiveUnits/{unitId}",
        "definition": {
          "entityName": "ProductiveUnit",
          "schema": {
            "$ref": "#/backend/entities/ProductiveUnit"
          },
          "description": "Collection for storing the user's single productive unit information. Each document is owned by a single user.",
          "params": [
            {
              "name": "unitId",
              "description": "Unique identifier for the productive unit."
            }
          ]
        }
      }
    ],
    "reasoning": "The Firestore structure is designed for a multi-tenant SaaS application where each user's data must be securely isolated. This is achieved by including a 'userId' field in every top-level data document (lots, staff, tasks) and enforcing ownership via Firestore Security Rules. A separate 'users' collection stores public profile information and subscription status, which is readable by the user but only writable by them upon creation. This flat, user-centric data model ensures that queries are efficient and security rules are simple and performant, as they do not require complex joins or sub-collection lookups. This design directly supports the business requirement of a paid application on the Play Store by providing clear data ownership and the necessary hooks for subscription management."
  }
}
