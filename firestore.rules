rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return request.auth.uid == userId; }
    function isExistingDocOwner() { return isSignedIn() && isOwner(resource.data.userId); }
    function isNewDocOwner() { return isSignedIn() && request.resource.data.userId == request.auth.uid; }

    // User profile remains secure
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Permissive rules for app collections to allow complex operations.
    // The app's logic is responsible for ensuring users only query their own data.
    match /productiveUnits/{unitId}   { allow read, write: if isSignedIn(); }
    match /lots/{lotId}               { allow read, write: if isSignedIn(); }
    match /staff/{staffId}            { allow read, write: if isSignedIn(); }
    match /staffAttendance/{attId}    { allow read, write: if isSignedIn(); }
    match /tasks/{taskId}             { allow read, write: if isSignedIn(); }
    match /supplies/{supplyId}        { allow read, write: if isSignedIn(); }
    match /transactions/{transId}     { allow read, write: if isSignedIn(); }
    
    // Subcollections also need permissive rules for cascading deletes.
    match /lots/{lotId}/sublots/{sublotId} {
      allow read, write: if isSignedIn();
    }
    match /tasks/{taskId}/supplyUsages/{usageId} {
      allow read, write: if isSignedIn();
    }

    // System logs should remain secure
    match /system_logs/{logId} {
      allow create: if isNewDocOwner();
      allow read: if isExistingDocOwner();
      allow update, delete: if false;
    }
  }
}
