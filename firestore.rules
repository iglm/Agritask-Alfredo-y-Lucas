rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isCreatingOwnDoc() {
      return isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    function isOwnerOfDoc() {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // --- User Profile ---
    // A user can manage their own profile.
    match /users/{userId} {
      allow get, update: if isSignedIn() && request.auth.uid == userId;
      allow list, create, delete: if false;
    }

    // --- Data Collections Pattern ---
    // list: Allowed for any signed-in user. Client must filter by userId.
    // get, update, delete: Allowed only for the owner of the document.
    // create: Allowed if the new document's userId matches the requester's UID.
    
    match /productiveUnits/{id} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwnerOfDoc();
      allow create: if isCreatingOwnDoc();
    }
    match /lots/{id} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwnerOfDoc();
      allow create: if isCreatingOwnDoc();
    }
    match /staff/{id} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwnerOfDoc();
      allow create: if isCreatingOwnDoc();
    }
    match /staffAttendance/{id} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwnerOfDoc();
      allow create: if isCreatingOwnDoc();
    }
    match /tasks/{id} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwnerOfDoc();
      allow create: if isCreatingOwnDoc();
    }
    match /supplies/{id} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwnerOfDoc();
      allow create: if isCreatingOwnDoc();
    }
    match /transactions/{id} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwnerOfDoc();
      allow create: if isCreatingOwnDoc();
    }

    // --- Subcollections ---
    // Allow full access if the user owns the parent document.
    match /lots/{lotId}/sublots/{sublotId} {
      allow read, write: if isSignedIn() && get(/databases/$(database)/documents/lots/$(lotId)).data.userId == request.auth.uid;
    }

    match /tasks/{taskId}/supplyUsages/{usageId} {
      allow read, write: if isSignedIn() && get(/databases/$(database)/documents/tasks/$(taskId)).data.userId == request.auth.uid;
    }

    // --- System Logs ---
    // Clients can create their own logs.
    // They cannot read, update, or delete any logs.
    match /system_logs/{logId} {
      allow create: if isCreatingOwnDoc();
      allow read, update, delete: if false;
    }
  }
}
