rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return request.auth.uid == userId; }

    // This function checks the 'userId' field of an existing document.
    function isExistingDocOwner() {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }
    // This function checks the 'userId' field of a document being created.
    function isNewDocOwner() {
      return isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // Rule for the user's own profile document
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Secure rules for user-owned collections
    match /productiveUnits/{unitId} {
      allow read, update, delete: if isExistingDocOwner();
      allow create: if isNewDocOwner();
    }
    match /lots/{lotId} {
      allow read, update, delete: if isExistingDocOwner();
      allow create: if isNewDocOwner();
    }
    match /staff/{staffId} {
      allow read, update, delete: if isExistingDocOwner();
      allow create: if isNewDocOwner();
    }
    match /staffAttendance/{attId} {
      allow read, update, delete: if isExistingDocOwner();
      allow create: if isNewDocOwner();
    }
    match /tasks/{taskId} {
      allow read, update, delete: if isExistingDocOwner();
      allow create: if isNewDocOwner();
    }
    match /supplies/{supplyId} {
      allow read, update, delete: if isExistingDocOwner();
      allow create: if isNewDocOwner();
    }
    match /transactions/{transId} {
      allow read, update, delete: if isExistingDocOwner();
      allow create: if isNewDocOwner();
    }
    
    // Subcollections also need secure rules
    match /lots/{lotId}/sublots/{sublotId} {
      allow read, update, delete: if isExistingDocOwner();
      allow create: if isNewDocOwner();
    }
    match /tasks/{taskId}/supplyUsages/{usageId} {
      allow read, update, delete: if isExistingDocOwner();
      allow create: if isNewDocOwner();
    }

    // System logs should remain secure
    match /system_logs/{logId} {
      allow create: if isNewDocOwner();
      allow read: if isExistingDocOwner();
      allow update, delete: if false;
    }
  }
}
