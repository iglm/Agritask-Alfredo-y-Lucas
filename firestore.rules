rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isNewDocOwner() {
      return request.resource.data.userId == request.auth.uid;
    }
    
    function isExistingDocOwner() {
      return resource.data.userId == request.auth.uid;
    }
    
    // ----------------------------------------------------------------------
    // User Profile Rules
    // ----------------------------------------------------------------------
    match /users/{userId} {
      // Allow a user to create their own profile document.
      allow create: if isSignedIn() && isOwner(userId);
      // Allow a user to read and update their own profile.
      allow get, update: if isSignedIn() && isOwner(userId);
      // Disallow deleting profiles.
      allow delete: if false;
    }

    // ----------------------------------------------------------------------
    // Collection Group Rules for Cross-Collection Queries
    // ----------------------------------------------------------------------
    match /{path=**}/sublots/{sublotId} {
      // This rule allows collection group queries on 'sublots'.
      // The client MUST use a 'where("userId", "==", request.auth.uid)' clause.
      allow list: if isSignedIn();
    }

    match /{path=**}/supplyUsages/{usageId} {
      // This rule allows collection group queries on 'supplyUsages'.
      // The client MUST use a 'where("userId", "==", request.auth.uid)' clause.
      allow list: if isSignedIn();
    }


    // ----------------------------------------------------------------------
    // Data Collection Rules (Lots, Staff, Tasks, ProductiveUnit)
    // ----------------------------------------------------------------------
    
    match /lots/{lotId} {
      // Allow read/delete only if the user is the owner of the document.
      // List operation is allowed only if the query filters by the owner's userId.
      allow get, delete: if isSignedIn() && isExistingDocOwner();
      allow list: if isSignedIn() && isExistingDocOwner();
      // Allow create if the new document has the creator's userId.
      allow create: if isSignedIn() && isNewDocOwner();
      // Allow update if the user owns the document and isn't changing the owner.
      allow update: if isSignedIn() && isExistingDocOwner() && isNewDocOwner();

      match /sublots/{sublotId} {
        // This rule is for direct GET requests, not for collection group queries.
        allow get: if isSignedIn() && isExistingDocOwner();
        // WRITE permissions for this specific path.
        allow create: if isSignedIn() && isNewDocOwner();
        allow update: if isSignedIn() && isExistingDocOwner() && isNewDocOwner();
        allow delete: if isSignedIn() && isExistingDocOwner();
      }
    }

    match /staff/{staffId} {
      allow get, delete: if isSignedIn() && isExistingDocOwner();
      allow list: if isSignedIn() && isExistingDocOwner();
      allow create: if isSignedIn() && isNewDocOwner();
      allow update: if isSignedIn() && isExistingDocOwner() && isNewDocOwner();
    }
    
    match /staffAttendance/{attendanceId} {
      allow get, delete: if isSignedIn() && isExistingDocOwner();
      allow list: if isSignedIn() && isExistingDocOwner();
      allow create: if isSignedIn() && isNewDocOwner();
      allow update: if isSignedIn() && isExistingDocOwner() && isNewDocOwner();
    }

    match /tasks/{taskId} {
      allow get, delete: if isSignedIn() && isExistingDocOwner();
      allow list: if isSignedIn() && isExistingDocOwner();
      allow create: if isSignedIn() && isNewDocOwner();
      allow update: if isSignedIn() && isExistingDocOwner() && isNewDocOwner();
      
      match /supplyUsages/{usageId} {
        // This rule is for direct GET requests, not for collection group queries.
        allow get: if isSignedIn() && isExistingDocOwner();
        // WRITE permissions for this specific path.
        allow create: if isSignedIn() && isNewDocOwner();
        allow update: if isSignedIn() && isExistingDocOwner() && isNewDocOwner();
        allow delete: if isSignedIn() && isExistingDocOwner();
      }
    }

    match /productiveUnits/{unitId} {
      allow get, delete: if isSignedIn() && isExistingDocOwner();
      allow list: if isSignedIn() && isExistingDocOwner();
      allow create: if isSignedIn() && isNewDocOwner();
      allow update: if isSignedIn() && isExistingDocOwner() && isNewDocOwner();
    }

    match /supplies/{supplyId} {
      allow get, delete: if isSignedIn() && isExistingDocOwner();
      allow list: if isSignedIn() && isExistingDocOwner();
      allow create: if isSignedIn() && isNewDocOwner();
      allow update: if isSignedIn() && isExistingDocOwner() && isNewDocOwner();
    }

    match /transactions/{transactionId} {
      allow get, delete: if isSignedIn() && isExistingDocOwner();
      allow list: if isSignedIn() && isExistingDocOwner();
      allow create: if isSignedIn() && isNewDocOwner();
      allow update: if isSignedIn() && isExistingDocOwner() && isNewDocOwner();
    }

    match /system_logs/{logId} {
      // Users can only create their own logs. No one can read, update, or delete them.
      allow create: if isSignedIn() && isNewDocOwner();
      allow read, update, delete: if false;
    }
  }
}
