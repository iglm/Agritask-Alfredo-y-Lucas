rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the authenticated user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // User can manage their own profile
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // --- Collections ---
    // General pattern:
    // - To create a document, the new document's `userId` must match the user's UID.
    // - To read, update, or delete a document, the existing document's `userId` must match the user's UID.
    // - To list (query) a collection, the query MUST include a `where("userId", "==", request.auth.uid)` clause.

    match /lots/{lotId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /productiveUnits/{unitId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /staff/{staffId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /staffAttendance/{attendanceId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /supplies/{supplyId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /tasks/{taskId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /transactions/{transactionId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /system_logs/{logId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow update, delete: if false; // Logs are immutable
    }

    // --- Subcollections ---
    // Permissions for subcollections are inherited from their parent documents.
    // We verify the user owns the parent document before allowing access.
    
    match /lots/{lotId}/sublots/{sublotId} {
      allow read, write: if isSignedIn() && isOwner(get(/databases/$(database)/documents/lots/$(lotId)).data.userId);
    }

    match /tasks/{taskId}/supplyUsages/{usageId} {
      allow read, write: if isSignedIn() && isOwner(get(/databases/$(database)/documents/tasks/$(taskId)).data.userId);
    }
  }
}
