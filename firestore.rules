rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return request.auth.uid == userId; }
    function isExistingDocOwner() { return isSignedIn() && isOwner(resource.data.userId); }
    function isNewDocOwner() { return isSignedIn() && request.resource.data.userId == request.auth.uid; }

    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    match /productiveUnits/{unitId} {
      allow read, create, update: if isNewDocOwner() || isExistingDocOwner();
      allow delete: if isExistingDocOwner();
    }
    match /lots/{lotId} {
      allow read, create, update: if isNewDocOwner() || isExistingDocOwner();
      allow delete: if isExistingDocOwner();
    }
    match /staff/{staffId} {
      allow read, create, update: if isNewDocOwner() || isExistingDocOwner();
      allow delete: if isExistingDocOwner();
    }
    match /staffAttendance/{attendanceId} {
      allow read, create, update: if isNewDocOwner() || isExistingDocOwner();
      allow delete: if isExistingDocOwner();
    }
    match /tasks/{taskId} {
      allow read, create, update: if isNewDocOwner() || isExistingDocOwner();
      allow delete: if isExistingDocOwner();
    }
    match /supplies/{supplyId} {
      allow read, create, update: if isNewDocOwner() || isExistingDocOwner();
      allow delete: if isExistingDocOwner();
    }
    match /transactions/{transactionId} {
      allow read, create, update: if isNewDocOwner() || isExistingDocOwner();
      allow delete: if isExistingDocOwner();
    }

    // Subcollections
    match /lots/{lotId}/sublots/{sublotId} {
       allow read, create, update: if isNewDocOwner() || isExistingDocOwner();
       allow delete: if isExistingDocOwner();
    }
    match /tasks/{taskId}/supplyUsages/{usageId} {
       allow read, create, update: if isNewDocOwner() || isExistingDocOwner();
       allow delete: if isExistingDocOwner();
    }

    // System Logs
    match /system_logs/{logId} {
      allow create: if isNewDocOwner();
      allow read: if isExistingDocOwner();
      allow update, delete: if false;
    }
  }
}
