rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return request.auth.uid == userId; }
    function isExistingDocOwner() { return isSignedIn() && isOwner(resource.data.userId); }
    function isNewDocOwner() { return isSignedIn() && request.resource.data.userId == request.auth.uid; }

    // User profile remains secure
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Permissive rules for top-level collections as requested
    match /lots/{docId} { allow read, write: if isSignedIn(); }
    match /productiveUnits/{docId} { allow read, write: if isSignedIn(); }
    match /staff/{docId} { allow read, write: if isSignedIn(); }
    match /staffAttendance/{docId} { allow read, write: if isSignedIn(); }
    match /supplies/{docId} { allow read, write: if isSignedIn(); }
    match /tasks/{docId} { allow read, write: if isSignedIn(); }
    match /transactions/{docId} { allow read, write: if isSignedIn(); }

    // Secure rule for system logs
    match /system_logs/{logId} {
      allow create: if isNewDocOwner();
      allow read: if isExistingDocOwner();
      allow update, delete: if false;
    }

    // Permissive rules for subcollections to allow direct access AND collection group queries
    // This specifically addresses the error on 'supplyUsages'
    match /{path=**}/sublots/{sublotId} {
        allow read, write: if isSignedIn();
    }
    match /{path=**}/supplyUsages/{usageId} {
        allow read, write: if isSignedIn();
    }
  }
}
