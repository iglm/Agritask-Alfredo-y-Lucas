rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Collections ---
    match /lots/{lotId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /productiveUnits/{unitId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /staff/{staffId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /staffAttendance/{attendanceId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /supplies/{supplyId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /tasks/{taskId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /transactions/{transactionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /system_logs/{logId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Logs are immutable
    }

    // --- Subcollections ---
    match /lots/{lotId}/sublots/{sublotId} {
      allow read, write: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/lots/$(lotId)).data.userId;
    }

    match /tasks/{taskId}/supplyUsages/{usageId} {
      allow read, write: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/tasks/$(taskId)).data.userId;
    }
    
    // --- Collection Group ---
    match /{path=**}/supplyUsages/{usageId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
