rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    // Checks if the UID in a document matches the logged-in user
    function isOwner(doc) {
      return isSignedIn() && doc.userId == request.auth.uid;
    }

    // --- User Profile ---
    // A user can only manage their own profile.
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // --- Top-level collections ---
    // The pattern is:
    // - Anyone signed in can query the collection (list).
    //   The client is responsible for adding `where('userId', '==', auth.uid)`.
    // - Only the owner can get, create, update, or delete a specific document.

    match /lots/{lotId} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }

    match /productiveUnits/{unitId} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }
    
    match /staff/{staffId} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }

    match /staffAttendance/{attendanceId} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }

    match /supplies/{supplyId} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }

    match /tasks/{taskId} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }

    match /transactions/{transactionId} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }

    // --- System Logs ---
    match /system_logs/{logId} {
      allow list, get: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
      allow update, delete: if false; // Logs are immutable
    }

    // --- Subcollections ---
    match /lots/{lotId}/sublots/{sublotId} {
      allow read, write: if isOwner(get(/databases/$(database)/documents/lots/$(lotId)).data);
    }
    
    match /tasks/{taskId}/supplyUsages/{usageId} {
      allow read, write: if isOwner(get(/databases/$(database)/documents/tasks/$(taskId)).data);
    }
    
    // --- Collection Group Rule ---
    // This is needed for the report on `reports/page.tsx`
    match /{path=**}/supplyUsages/{usageId} {
      allow list: if isSignedIn();
    }
  }
}
